<div class="row">
  <div class="col-sm-4">
    <h3>Comments</h3>
    <% @post.comments.each do |comment| %>
    <p><strong><%= comment.username %></strong>: <%= comment.body%></p>
    <%= link_to '[X]', [comment.post, comment],
    method: :delete,
    data: {confirm: 'Are you sure?'} %>
    <% end %>
  </div>
</div>

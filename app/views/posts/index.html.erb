<div class="column is-8">
<h1>Diskos</h1>
<% @posts.each do |post| %>
<div class="columns bb-not-last pv10">
      <div class="column is-8">
        <%= link_to post do %>
          <h3><%= post.title %></h3>
        <% end %>
        <div class="body">
          <%= truncate(post.body, length: 300) %>
          <p><em><small>Posted <%= time_ago_in_words(post.created_at) %> ago in by <%= post.user && post.user.email %>
            </small>
            </em>
          </p>
        </div>
</div>
<% end %>
<%= will_paginate(@posts) %>
